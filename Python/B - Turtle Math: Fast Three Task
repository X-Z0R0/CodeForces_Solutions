t = int(input())
while t:
    n = int(input())
    arr = list(map(int,input().split()))
    sum_ = sum(arr)
    if sum_%3 == 0:
        print(0)
    elif sum_%3 == 2:
        print(1)
    else:
        flag = 0
        for i in arr:
          if i%3==1:
            print(1)
            flag = 1
            break
        if flag != 1:
            print(2)
    t = t-1
